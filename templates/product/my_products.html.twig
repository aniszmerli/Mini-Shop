{% extends 'base.html.twig' %}

{% block title %}my products{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Name</th>
                    <th>Is Used</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.status }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.quantity }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.isUsed ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary btn-sm">Show</a>
                            <a href="{{ path('app_product_commands', {'id': product.id}) }}" class="btn btn-secondary btn-sm">Commands</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary" href="{{ path('app_product_new') }}">Create new</a>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}
{% block title %}admin products requests{% endblock %}

{% block body %}
    <div class="container mt-5">
    <h1>Products requests</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Name</th>
                    <th>Is Used</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.quantity }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.isUsed ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary btn-sm">Show</a>
                            <a href="{{ path('app_admin_products_accept', {'id': product.id}) }}" class="btn btn-success btn-sm">Accept</a>
                            <a href="{{ path('app_admin_products_reject', {'id': product.id}) }}" class="btn btn-danger btn-sm">Refuse</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
